\defbeamertemplate*{headline}{rwth theme}[1][left]
{
  \vskip6mm%
  \begin{beamercolorbox}[sep=0cm,wd=1\textwidth]{frametitle}
    \hskip15pt\usebeamerfont{frametitle}\ifx\insertsubsection\@empty\else{\insertsubsection\ {\ttfamily->}\ }\fi\insertframetitle
  \end{beamercolorbox}
  \vskip0.96mm
  \centerline{\color{black!50}{\rule{0.953\textwidth}{.3pt}}}
}


\defbeamertemplate*{footline}{rwth theme}
{
  \centerline{\color{black!50}{\rule{0.953\textwidth}{.3pt}}}
  \vspace{-3.5mm}
  \leavevmode%
  \begin{beamercolorbox}[wd=6.8mm,ht=4.1mm,sep=1pt,right]{framenumber in head/foot}
    \usebeamerfont{framenumber}\insertframenumber{}
    \vspace{1mm}
  \end{beamercolorbox}
  \begin{beamercolorbox}[sep=2pt,wd=.6\paperwidth,ht=2.25ex,dp=1ex]{title in head/foot}%
      \hskip16.5pt\usebeamerfont{title in head/foot}\insertshorttitle%
      \vskip0pt
      \hskip16.5pt\usebeamerfont{author in head/foot}\insertshortauthor%
      \expandafter\beamer@ifempty\expandafter{\beamer@shortinstitute}{}{~|~\@typ}%
      \vskip1.5pt
      \hskip16.5pt\expandafter\beamer@ifempty\expandafter{\beamer@shortdate}{}{\insertshortdate}%
  \end{beamercolorbox}%
  \hfill%
  \begin{beamercolorbox}[sep=2pt,wd=.3\paperwidth]{title in head/foot}%
    \ifx\printinstlogo\@empty{}\else{\flushright\hfill\printinstlogo}\fi%
  \end{beamercolorbox}%
}

